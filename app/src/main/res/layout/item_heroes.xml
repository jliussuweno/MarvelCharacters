<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageViewHeroes"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewNameHeroes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:lines="2"
        android:singleLine="false"
        android:text="Heroes Name"
        app:layout_constraintStart_toEndOf="@+id/imageViewHeroes"
        app:layout_constraintTop_toTopOf="@+id/imageViewHeroes" />

    <TextView
        android:id="@+id/textViewIdHeroes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="IdHeroes"
        app:layout_constraintStart_toStartOf="@+id/textViewNameHeroes"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameHeroes" />
</androidx.constraintlayout.widget.ConstraintLayout>